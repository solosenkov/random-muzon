{
  "manifest_version": 3,
  "name": "Random Muzon",
  "version": "1.0",
  "description": "Слушайте случайную музыку из Jamendo",
  "permissions": [
    "storage",
    "background",
    "windows",
    "tabs"
  ],
  "host_permissions": [
    "https://api.jamendo.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "48": "assets/play-icon.png"
    }
  },
  "icons": {
    "48": "assets/play-icon.png"
  }
}